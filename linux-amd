# add +icedream.2 to final package version without disturbing the script
replace#global#pkgver=#_pkgver=
replace#global#$pkgver#\$_pkgver
replace#global#${pkgver}#\${_pkgver}
replace#global#echo $_pkgver#echo $pkgver
replace#global#echo ${_pkgver}#echo ${pkgver}
addline#global#_pkgver=#pkgver=\${_pkgver}+icedream.2
